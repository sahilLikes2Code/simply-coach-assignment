<div class="w-1/2 text-center mx-auto my-5">
  <%= form_with url: "/easter_egg", class: "space-y-4", method: :post do |form| %>
    <div>
      <%= form.label :array,"Enter an array of length greater than one to return maximum sub array", class: "block text-gray-700 text-2xl font-bold my-10" %>
      <%= form.text_field :array, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div>
      <%= form.submit "Find", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full " %>
    </div>
  <% end %>
</div>
