<div class="max-w-screen-md text-center mx-auto my-5">
  <div>
    <h2 class="text-4xl font-bold py-5 text-blue-500 ">
      List of Tasks
    </h2>
    <% if @tasks.empty?%>
      <h3 class="text-2xl  py-5 text-black ">
        No tasks found!
      </h3>
    <% end %>
    <%= render 'due_date_color_indicator' %>
    <%= render 'all_tasks_list' %>
  </div>
  <div class="mt-8">
    <%= link_to 'New task', new_task_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:shadow-outline mr-5' %>
  </div>
  <div class="mt-10">
    <% if @tasks.completed.any?%>
      <h2 class="text-4xl font-bold pt-5 text-blue-500 ">
        Completed Tasks
      </h2>
      <p class="text-blue-500 pb-5 pt-2 ">(Click one to edit)</p>
    <%end%>
    <%= render 'completed_tasks_list' %>
  </div>
</div>
