<ul class="p-0 mx-0 my-auto">
  <% @tasks.each do |task| %>
    <li class="border border-slate-300 text-2xl flex p-4 mt-2 ">
      <%= render 'task', task: task %>
      <div class="text-right flex">
        <%= link_to fa_icon("pencil"), edit_task_path(task), class: 'text-slate-400 pr-2' %>
        <%= button_to fa_icon("trash-o"), task_path(task), method: :delete, class: "text-slate-400",data: { confirm: 'Are you sure?' }  %>
      </div>
    </li>
  <% end %>
</ul>
